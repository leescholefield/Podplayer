@using Microsoft.AspNetCore.Identity
@using Podplayer.Entity.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-light" asp-controller="Account" 
           asp-action="Manage" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline login-form" asp-controller="Account" asp-action="SignOut" method="post" asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light internal-nav" id="register" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light internal-nav" id="login" asp-controller="Account" asp-action="SignIn">Login</a>
    </li>
}
</ul>
